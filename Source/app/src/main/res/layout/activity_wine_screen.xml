<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corkcollector.source.WineScreen">

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/wineImage"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_columnSpan="3"
            android:layout_marginBottom="11.25dp"
            android:layout_marginLeft="11.25dp"
            android:layout_marginRight="11.25dp"
            android:layout_marginTop="11.25dp"
            android:layout_rowSpan="5"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:contentDescription="Peller Estates Cabernet Merlot"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/peller_cab_merlot" />

        <TextView
            android:id="@+id/wineNameText"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:layout_weight="1"
            android:text="Peller Estates Cabernet Merlot"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <RatingBar
            android:id="@+id/wineryRatingBar"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginLeft="50dp"
            android:layout_row="1"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/greyBlock"
            android:layout_width="175dp"
            android:layout_height="2dp"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:adjustViewBounds="false"
            android:contentDescription=""
            android:scaleX="30"
            app:srcCompat="@drawable/grey" />

        <TextView
            android:id="@+id/wineTypeYearText"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginLeft="7dp"
            android:layout_row="3"
            android:maxWidth="175dp"
            android:text="Cabernet Merlot 2012"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/wineDescriptionText"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginLeft="7dp"
            android:layout_row="4"
            android:lines="3"
            android:maxLines="3"
            android:maxWidth="175dp"
            android:text="Medium-bodied with refreshing flavours of berries and smoke. Excellent for everyday enjoyment. Stays fresh up to 6 weeks once opened."
            android:textAlignment="center" />

        <Button
            android:id="@+id/tasteWineButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginLeft="10dp"
            android:layout_row="5"
            android:text="View Menu" />

        <Button
            android:id="@+id/addToCellarButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:text="Check-In" />


        <ImageView
            android:id="@+id/greyLine2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="6"
            android:scaleX="80"
            app:srcCompat="@drawable/grey" />

        <GridLayout
            android:id="@+id/wineRatingReviewGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_row="7">

            <TextView
                android:id="@+id/wineRatingAuthorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Author"
                android:textColor="@android:color/black"
                android:layout_column="0"
                android:layout_row="0"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/wineIndividualRatingBar"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:layout_row="0"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/wineReviewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_row="1"
                android:lines="5"
                android:maxLines="5"
                android:text="Personally not a huge fan of this red. It was a little too sweet for my tastes but is still a good wine." />

        </GridLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
