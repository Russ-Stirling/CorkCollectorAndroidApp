<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corkcollector.source.WineryScreen">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginBottom="11.25dp"
            android:layout_marginLeft="11.25dp"
            android:layout_marginRight="11.25dp"
            android:layout_marginTop="11.25dp"
            android:layout_rowSpan="4"
            android:adjustViewBounds="false"
            android:contentDescription="Peller Estates Main Entrance"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/Peller" />

        <TextView
            android:id="@+id/wineryName"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:layout_row="0"
            android:text="Peller Estates"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <RatingBar
            android:id="@+id/wineryRatingBar"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="50dp"
            android:layout_row="1"
            android:numStars="5"
            android:rating="4"
            android:stepSize="1"
            android:textAlignment="center" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
