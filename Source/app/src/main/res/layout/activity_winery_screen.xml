<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corkcollector.source.WineryScreen">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/wineryImage"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_columnSpan="3"
            android:layout_marginBottom="11.25dp"
            android:layout_marginLeft="11.25dp"
            android:layout_marginRight="11.25dp"
            android:layout_marginTop="11.25dp"
            android:layout_rowSpan="5"
            android:adjustViewBounds="false"
            android:contentDescription="@string/winery_photo_description"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/peller_entrance" />

        <TextView
            android:id="@+id/wineryName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_row="0"
            android:text="@string/winery_name"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <RatingBar
            android:id="@+id/wineryRatingBar"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_row="1"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar_red"
            android:rating="3"
            android:stepSize="1"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/greyBlock"
            android:layout_width="175dp"
            android:layout_height="2dp"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:adjustViewBounds="false"
            android:contentDescription="@string/grey_block"
            android:scaleX="30"
            app:srcCompat="@drawable/grey" />

        <TextView
            android:id="@+id/wineryAddressText"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_row="3"
            android:lines="3"
            android:maxLines="3"
            android:maxWidth="175dp"
            android:text="@string/winery_address"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wineryPhoneNumberText"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_row="4"
            android:lines="1"
            android:maxLines="1"
            android:maxWidth="175dp"
            android:text="@string/winery_phone_number"
            android:textAlignment="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/viewMenuButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="5"
            android:text="@string/winery_view_menu_button"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/checkInButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:text="@string/winery_check_in_button"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/greyLine2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="6"
            android:contentDescription="@string/grey_block"
            android:scaleX="80"
            app:srcCompat="@drawable/grey" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_row="7">

            <LinearLayout
                android:id="@+id/wineryReviewLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/rateReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_row="8"
            android:text="Rate/Review"
            android:textColor="@color/colorAccent" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>