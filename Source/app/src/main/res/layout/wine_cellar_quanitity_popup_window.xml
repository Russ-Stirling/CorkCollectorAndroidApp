<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/tastedWinesTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add To Wine Cellar"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/wineCellarAdditionGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/wineNameTitle"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:text="Quantity"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/wineQtyEditText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/wineTypeTitle"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="160dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:text="Notes"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/wineNotesEditText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="12dp"
            android:layout_row="2"
            android:ems="10"
            android:inputType="textMultiLine" />
    </GridLayout>

    <Button
        android:id="@+id/submitToCellarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wineCellarAdditionGrid"
        android:layout_centerHorizontal="true"
        android:text="Add To Cellar" />

</RelativeLayout>