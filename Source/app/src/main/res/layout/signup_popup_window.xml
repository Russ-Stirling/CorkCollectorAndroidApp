<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/tastedWinesTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/signupGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/wineNameTitle"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:text="Name"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nameEntryBox"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="18dp"
            android:layout_row="0"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:text="Username"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/usernameEntryBox"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="18dp"
            android:layout_row="1"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:text="Email"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailEntryBox"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="18dp"
            android:layout_row="2"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:text="Password"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/firstPasswordEntryBox"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="18dp"
            android:layout_row="3"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/reenterPasswordText"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_row="4"
            android:text="Re-enter Password"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reenterPasswordEntryBox"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="32dp"
            android:layout_row="4"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wineCellarAdditionGrid"
            android:layout_centerHorizontal="true"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="148dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="15dp"
            android:layout_row="5"
            android:text="Sign Up" />
    </GridLayout>

</RelativeLayout>